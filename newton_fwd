#include<bits/stdc++.h>
using namespace std;

int main(){
float x[10],y[10][10];
int i,j,n;
cout<<"enter the number of data"<<endl;
cin>>n;
cout<<"enter data :  "<<endl;
for(i=0; i<n; i++){
    cout<<"x["<<i<<"] = "<<endl;
    cin>>x[i];
    cout<<"y["<<i<<"] = "<<endl;
    cin>>y[i][0];
}

for(i = 1; i < n; i++)
{
 for(j = 0; j < n-i; j++)
 {
  y[j][i] = y[j+1][i-1] - y[j][i-1];
 }
}

/* Displaying Forward Difference Table */
cout << endl << "FORWARD DIFFERENCE TABLE" << endl;
for(i = 0; i < n; i++)
{
 cout << x[i];
 for(j = 0; j < n-i ; j++)
 {
  cout << "\t" << y[i][j];
 }
 cout << endl;
}



    return 0;
}
